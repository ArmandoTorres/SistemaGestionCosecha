<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/mainCoodinatorLayout"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/relativeLayoutMainContainer">

            <include android:id="@+id/appbar"
                layout="@layout/toolbar"/>

            <RelativeLayout
                android:id="@+id/body_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appbar">

            </RelativeLayout>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_fab_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/add"
            app:backgroundTint="@color/color_primary"
            app:fabSize="mini"
            app:rippleColor="@color/color_primary"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            app:borderWidth="0dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_fab_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            app:backgroundTint="@color/color_primary"
            app:fabSize="mini"
            android:src="@drawable/add"
            app:rippleColor="@color/color_primary"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            app:borderWidth="0dp"/>

    </android.support.design.widget.CoordinatorLayout>

    <!-- Layout del menÃº lateral (Navigation View) -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_navview"
        app:menu="@menu/menu_navview" />

</android.support.v4.widget.DrawerLayout>