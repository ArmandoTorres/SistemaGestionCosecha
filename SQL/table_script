CREATE TABLE BASCULA.BA_MRANGO_DISPOSITIVO
( ID_EMPRESA NUMBER, 
  ID_PERIODO NUMBER, 
  DISPOSITIVO VARCHAR2(25),
  APLICACION  VARCHAR2(25),
  RANGO_DESDE NUMBER NOT NULL, 
  RANGO_HASTA NUMBER NOT NULL,
  CONSTRAINT PK_MRANGO_DISPOSITIVO PRIMARY KEY (ID_EMPRESA, ID_PERIODO, DISPOSITIVO, APLICACION));
  
COMMENT ON TABLE BASCULA.BA_MRANGO_DISPOSITIVO IS 'Tabla de rango de envios y ticket para las aplicacion moviles android';
COMMENT ON COLUMN BASCULA.BA_MRANGO_DISPOSITIVO.DISPOSITIVO IS 'IMEI del dispositivo identificador unico de cada dispositivo';
COMMENT ON COLUMN BASCULA.BA_MRANGO_DISPOSITIVO.APLICACION IS 'Nombre de la aplicacion la cual estara utilizando el rango.';
COMMENT ON COLUMN BASCULA.BA_MRANGO_DISPOSITIVO.RANGO_DESDE IS 'Rango desde el cual la aplicacion comenzara a crear los correlativos.'
COMMENT ON COLUMN BASCULA.BA_MRANGO_DISPOSITIVO.RANGO_HASTA IS 'Rango hasta el cual la aplicacion creara los correlativos.'

CREATE PUBLIC SYNONYM BA_MRANGO_DISPOSITIVO FOR BASCULA.BA_MRANGO_DISPOSITIVO;